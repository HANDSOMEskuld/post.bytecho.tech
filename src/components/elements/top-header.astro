---
import Github from "@/assets/svgs/github.astro";
import Search01 from "@/assets/svgs/search-01.astro";
import MenuDropdown from "./menu-dropdown.astro";
import { SITE } from "@/lib/config";
import ThemeController from "../bases/theme-controller.astro";
---

<div
  class="navbar border-b border-primary-content/80 dark:border-primary-content/20 bg-base-100"
>
  <!-- Mobile Start -->
  <div class="navbar-start lg:w-1/2">
    <MenuDropdown />
    
    <!-- Mobile Logo -->
    <a class="btn btn-ghost normal-case px-2 gap-2 group lg:hidden" href="/" aria-label="Home">
      <!-- Icon: Data Stream (Mobile Size) -->
      <div class="flex flex-col gap-[2px] w-6 overflow-hidden">
        <div class="w-[80%] h-[3px] rounded-l-sm bg-green-600 dark:bg-green-400 opacity-60 transform group-hover:translate-x-1 transition-transform duration-300"></div>
        <div class="w-[110%] h-[5px] rounded-l-sm bg-gradient-to-r from-green-700 to-green-500 dark:from-green-400 dark:to-green-300 translate-x-[-10%] group-hover:translate-x-0 transition-transform duration-500 ease-out"></div>
        <div class="w-[70%] h-[3px] rounded-l-sm bg-green-600 dark:bg-green-400 opacity-40 transform group-hover:translate-x-2 transition-transform duration-700"></div>
      </div>
      <!-- Text -->
      <span class="font-mono font-bold text-lg tracking-tight">
        BYTECHO<span class="text-green-600 dark:text-green-400 animate-pulse">_</span>
      </span>
    </a>
  </div>

  <!-- Desktop Center -->
  <div class="navbar-center hidden lg:flex">
    <!-- Desktop Logo -->
    <a class="btn btn-ghost normal-case text-xl px-2 gap-3 group" href="/" aria-label="Home">
      <!-- Icon: Data Stream (Desktop Size) -->
      <div class="flex flex-col gap-[3px] w-8 py-1 overflow-hidden">
        <!-- Stream Line 1 -->
        <div class="w-[80%] h-1 rounded-l-sm bg-green-600 dark:bg-green-400 opacity-60 transform group-hover:translate-x-1 transition-transform duration-300"></div>
        <!-- Stream Line 2 (Main) -->
        <div class="w-[110%] h-1.5 rounded-l-sm bg-gradient-to-r from-green-700 to-green-500 dark:from-green-400 dark:to-green-300 shadow-sm translate-x-[-10%] group-hover:translate-x-0 transition-transform duration-500 ease-out"></div>
        <!-- Stream Line 3 -->
        <div class="w-[70%] h-1 rounded-l-sm bg-green-600 dark:bg-green-400 opacity-40 transform group-hover:translate-x-2 transition-transform duration-700"></div>
      </div>
      
      <!-- Text -->
      <span class="font-mono font-bold text-xl tracking-tighter flex items-end">
        BYTECHO<span class="text-green-600 dark:text-green-400 animate-pulse ml-0.5">_</span>
      </span>
    </a>
  </div>

  <!-- End / Actions -->
  <div class="navbar-end">
    <ThemeController />
    <a class="btn btn-ghost btn-circle" href="/search" aria-label="Search">
      <Search01 />
    </a>
    <a
      class="btn btn-ghost btn-circle"
      href={SITE.github}
      target="_blank"
      aria-label="GitHub"
    >
      <Github />
    </a>
  </div>
</div>