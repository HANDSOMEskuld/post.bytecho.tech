---
import { NAVIGATION_LINKS, SOCIAL_LINKS, OTHER_LINKS } from "@/lib/config";
import { categoriesHandler } from "@/lib/handlers/categories"; // 引入分类处理器
import Hashtag from "@/assets/svgs/hashtag.astro";
import Icon from "../bases/icon.astro";

// 获取所有分类，并取前 6 个展示
const categories = categoriesHandler.allCategories().slice(0, 6);
---

<footer class="footer border-t border-base-300 bg-base-100/50 py-10 mt-12 text-base-content">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 md:gap-12">
      
      {/* 第一列：品牌与简介 */}
      <div class="md:col-span-2 flex flex-col gap-4">
        <aside class="flex items-center gap-2">
          <div class="p-2 bg-primary/10 rounded-lg text-primary">
            <Hashtag size="24" />
          </div>
          <div>
            <strong class="text-xl font-serif tracking-tight block">Bytecho Tech</strong>
            <span class="text-sm opacity-80">Where Bytes meet Echoes.</span>
          </div>
        </aside>
        <p class="text-base-content/70 text-sm leading-relaxed max-w-sm">
          A modern news platform built with <a class="link link-hover font-medium text-primary" href="https://astro.build" target="_blank">Astro</a>. 
          Delivering the latest updates in technology, programming, and lifestyle with speed and precision.
        </p>
        <div class="flex gap-4 mt-2">
          {
            SOCIAL_LINKS.map(({ href, icon, text, target }) => (
              <a
                href={href}
                class="btn btn-sm btn-ghost btn-square text-base-content/70 hover:text-primary hover:bg-primary/10 transition-colors"
                target={target ?? "_blank"}
                title={text}
                aria-label={text}
              >
                <Icon icon={icon} />
              </a>
            ))
          }
        </div>
      </div>

      {/* 第二列：推荐分类 */}
      <div class="flex flex-col gap-4">
        <h6 class="footer-title opacity-100 text-base font-bold text-base-content">Categories</h6> 
        <ul class="flex flex-col gap-2">
          {categories.map((category) => (
            <li>
              <a 
                href={`/categories/${category.id}/1`} 
                class="link link-hover text-base-content/70 hover:text-primary transition-colors flex items-center gap-2"
              >
                <span class="w-1.5 h-1.5 rounded-full bg-base-300"></span>
                {category.data.title}
              </a>
            </li>
          ))}
          <li>
            <a href="/categories" class="link link-hover text-primary text-sm font-medium mt-1 inline-block">
              View All Categories →
            </a>
          </li>
        </ul>
      </div>

      {/* 第三列：快速链接 */}
      <div class="flex flex-col gap-4">
        <h6 class="footer-title opacity-100 text-base font-bold text-base-content">Quick Links</h6> 
        <ul class="flex flex-col gap-2">
          <li><a href="/" class="link link-hover text-base-content/70 hover:text-primary">Home</a></li>
          <li><a href="/articles" class="link link-hover text-base-content/70 hover:text-primary">All Articles</a></li>
          {
            OTHER_LINKS.map(({ href, text, target }) => (
              <li>
                <a href={href} class="link link-hover text-base-content/70 hover:text-primary" target={target ?? "_self"}>
                  {text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

    </div>

    <div class="divider my-8"></div>

    <div class="flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-base-content/60">
      <p>© {new Date().getFullYear()} Bytecho Tech. All rights reserved.</p>
      <div class="flex gap-6">
        <a href="/privacy" class="hover:text-base-content transition-colors">Privacy Policy</a>
        <a href="/terms" class="hover:text-base-content transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>